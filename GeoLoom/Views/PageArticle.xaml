<Window x:Class="GeoLoom.Views.ArticlePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion des articles" Height="400" Width="700">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- DataGrid des articles -->
        <DataGrid x:Name="ArticleGrid" Grid.Row="0" AutoGenerateColumns="False"
                  ItemsSource="{Binding Articles}" 
                  SelectedItem="{Binding SelectedArticle, Mode=TwoWay}"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ArticleId}" IsReadOnly="True" Width="Auto"/>
                <DataGridTextColumn Header="Nom" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Code" Binding="{Binding Code}" Width="*"/>
                <DataGridTextColumn Header="Famille" Binding="{Binding FamilyId}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Formulaire bas -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0" >
            <Label Content="Nom:" VerticalAlignment="Center"/>
            <TextBox Width="120" Text="{Binding EditingArticle.Name, UpdateSourceTrigger=PropertyChanged}" Margin="2"/>
            <Label Content="Code:" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <TextBox Width="80" Text="{Binding EditingArticle.Code, UpdateSourceTrigger=PropertyChanged}" Margin="2"/>
            <Label Content="Famille:" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <TextBox Width="60" Text="{Binding EditingArticle.FamilyId, UpdateSourceTrigger=PropertyChanged}" Margin="2"/>
            <Button Content="Ajouter" Command="{Binding AddCommand}" Margin="10,0"/>
            <Button Content="Modifier" Command="{Binding UpdateCommand}" Margin="4,0"/>
            <Button Content="Supprimer" Command="{Binding DeleteCommand}" Margin="4,0"/>
        </StackPanel>
    </Grid>
</Window>
